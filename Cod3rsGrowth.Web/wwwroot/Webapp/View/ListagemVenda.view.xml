<mvc:View
	controllerName="ui5.carro.controller.ListagemVenda"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt">
	
	<Table
		id="TabelaVendas"
		inset="false"
		items="{path: 'Vendas>/'}">
		<headerToolbar>
         <Toolbar>
			<Title text="{i18n>invoiceListTitle.Vendas}"/>
            <ToolbarSpacer/>
			 <SearchField 
               width="auto" 
			   id="FiltroNome"
               search=".filtroNome"
			   placeholder="Nome"/>
			 <SearchField
               width="190px"
			   id="FiltroCpf"
               search=".filtroCpf"
			   placeholder="CPF"/>
			 <SearchField
               width="190px"
			   id="FiltroTelefone"
               search=".filtroTelefone"
			   placeholder="Telefone"/>
			 <Input
               width="170px"
			   id="FiltroDataInicial"
			   placeholder="Data Inicial"/>
			 <Input
               width="170px"
			   id="FiltroDataFinal"
			   placeholder="Data Final"/>
			<Button text="Filtrar Data"
					press=".filtrarDatas"/>
         </Toolbar>
      </headerToolbar>
		<columns>
			<Column>
				<Text text="Id" />
			</Column>
			<Column >
				<Text text="Nome" />
			</Column>
			<Column >
				<Text text="CPF" />
			</Column>
			<Column >
				<Text text="Email" />
			</Column>
			<Column >
				<Text text="Telefone" />
			</Column>
			<Column>
				<Text text="Id do Carro" />
			</Column>
			<Column >
				<Text text="Data De Compra" />
			</Column>
			<Column>
				<Text text="Valor Total" />
			</Column>
			<Column>
				<Text text="Pago" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text text="{Vendas>id}" />
					<Text text="{Vendas>nome}" />
					<Text text="{Vendas>cpf}" />
					<Text text="{Vendas>email}" />
					<Text text="{Vendas>telefone}" />
					<Text text="{Vendas>idDoCarroVendido}" />
					<Text text="{
						  path:'Vendas>dataDeCompra',
						  formatter: '.formatter.formatarData'
						  }"/>
					<Text text="{
						  path:'Vendas>valorTotal',
						  formatter: '.formatter.formatarValorDaMoeda'
						  }"/>
					<ObjectStatus
						text="{ path: 'Vendas>pago', formatter: '.formatter.alterarStatusDoPagamento' }"
						state="{= ${Vendas>pago} === false ? 'Error' : 'Success'}"
					/>

				</cells>
			</ColumnListItem>
		</items>
	</Table>
</mvc:View>